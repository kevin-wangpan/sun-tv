<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true" >

    <ImageView
        android:id="@+id/poster"
        android:contentDescription="@string/descreption"
        android:focusable="false"
        android:layout_width="@dimen/metro_normal_width"
        android:layout_height="@dimen/metro_noral_height"
        android:scaleType="fitXY"
        android:src="@drawable/poster_main" />

    <ImageView
        android:id="@+id/bitrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/poster"
        android:contentDescription="@string/descreption"
        android:focusable="false" />

    <TextView
        android:id="@+id/title"
        style="@style/HomePageVideoTitle"
        android:layout_width="@dimen/metro_normal_width"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/poster" />

</RelativeLayout>
