<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="@dimen/voice_light_widget_width"
    android:layout_height="@dimen/voice_light_widget_height"
    android:background="@drawable/layer"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/voice_light_widget_status_marginleft"
        android:contentDescription="@string/app_name"
        android:src="@drawable/light_0" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/voice_light_widget_percentage_marginleft"
        android:singleLine="true"
        android:textColor="#f2f2f2"
        android:textSize="@dimen/voice_light_widget_percentage_textsize" />

</LinearLayout>