<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/error_img_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/empty_view_img_margin_top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/net_error" />

    <ImageButton
        android:id="@+id/empty_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_view_bt_margin_top"
        android:background="@drawable/refresh_btn_selector"
        android:contentDescription="@string/app_name"
        android:visibility="visible" />

</LinearLayout>